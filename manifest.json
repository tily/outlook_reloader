{
  "manifest_version": 2,
  "name": "Outlook Reloader",
  "description": "This extension will reload the web outlook (https://outlook.office.com/owa/) periodically.",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://outlook.office.com/owa/*"
      ],
      "js": ["main.js"]
    }
  ],
  "browser_action": {
    "default_title": "Outlook Reloader",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "https://outlook.office.com/owa/*"
  ]
}
